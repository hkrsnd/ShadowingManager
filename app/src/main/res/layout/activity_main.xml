<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/seekthumb"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/PlayButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/play_button"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/seekBar1"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/FastButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stop_button"
        android:src="@drawable/fast"
        android:layout_alignTop="@+id/PlayButton"
        android:layout_toRightOf="@+id/PlayButton"
        android:layout_toEndOf="@+id/PlayButton"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BackButton"
        android:src="@drawable/back"
        android:background="@null"
        android:layout_alignTop="@+id/PlayButton"
        android:layout_toLeftOf="@+id/PlayButton"
        android:layout_toStartOf="@+id/PlayButton"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startRecordButton"
        android:background="@drawable/record_button"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/PlayButton"
        android:layout_toLeftOf="@+id/FastButton"
        android:layout_toStartOf="@+id/FastButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startPlayButton"
        android:background="@drawable/rec_play_button"
        android:layout_alignTop="@+id/startRecordButton"
        android:layout_alignRight="@+id/FastButton"
        android:layout_alignEnd="@+id/FastButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:layout_alignLeft="@+id/BackButton"
        android:layout_alignStart="@+id/BackButton"
        android:layout_alignRight="@+id/startPlayButton"
        android:layout_alignEnd="@+id/startPlayButton" />
</RelativeLayout>
